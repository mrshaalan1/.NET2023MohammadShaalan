@model List<Order>

@if (Model.Count() > 0)
{
    <div class="row  d-flex justify-content-center">
        <div class="col-8">


            @foreach (var order in Model)
            {
                <div class="col-lg-12 col-sm-12 background-primary border mb-3 border-0 text-white">


                    <div class="card-body">

                        <h4 class="card-title">
                            Order Date: @order.OrderDate
                            <span class="float-end text-success fw-bold">
                                Total: @order.TotalAmount
                            </span>
                        </h4>
                        <p class="card-text">
                            <h5 class="fw-bold">Products</h5>
                            <ul>
                                @foreach (var item in @order.OrderItemsIds)
                                {
                                    <li class="text-white">@item.ProductName</li>
                                }
                            </ul>
                        </p>

                        <a class="btn bg-secondary bg-opacity-25 border-white text-white" asp-controller="Order" asp-action="Summary" asp-route-id="@order.Id">View</a>
                        <a class="btn bg-secondary bg-opacity-25 border-white text-white" asp-controller="Order" asp-action="Delete" asp-route-id="@order.Id">Delete</a>


                    </div>

                </div>
            }
        </div>
    </div>
}
else
{
    <h1 class="text-white fw-bold">No Orders</h1>
}