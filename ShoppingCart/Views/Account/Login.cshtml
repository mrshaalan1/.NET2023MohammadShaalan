@model LoginViewModel

<div class="login-container">

    <div class="row">
        <div class="offset-md-2 col-lg-5 col-md-7 offset-lg-4 offset-md-3">
            <div class="panel border bg-white">
                <div class="panel-heading">
                    <h3 class="pt-3 font-weight-bold">Login</h3>
                    <div asp-validation-summary="All" class="text-danger"></div>

                </div>
                <div class="panel-body p-3">
                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div class="form-group py-2">
                            <div class="input-field">
                                <input asp-for="UserName" class="p-1" type="text" placeholder="Username or Email" required>
                                <span asp-validation-for="UserName" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="form-group py-1 pb-2">
                            <div class="input-field">
                                <input asp-for="Password" class="p-1" type="password" placeholder="Enter your Password" required>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-inline d-flex justify-content-between">
                            <a href="#" id="forgot" class="font-weight-bold">Forgot password?</a>
                        </div>
                        <div class="d-flex justify-content-center align-items-center">
                            <button type="submit" class="btn btn-primary btn-block mt-3 w-75">Login</button>
                        </div>
                        <div class="text-center pt-4 text-muted">
                            Don't have an account? <a asp-controller="Account" asp-action="Create">Sign up</a>
                        </div>

                        <input type="hidden" asp-for="ReturnUrl"/>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

