@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}
<div class="d-flex justify-content-between">
    <h1 class="text-white">Categories</h1>

    <p>
        <a asp-action="Create" class="text-decoration-none text-white">
            <button class="btn btn-info create-btn text-white">
                Create New
            </button>
        </a>
    </p>
</div>
<table class="table sorting text-white" id="categories">
    <thead>
    <tr>

        <th>
            Name
        </th>
        <th>
            Slug
        </th>

        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr id="id_@item.Id">

            <td>
                @item.Name
            </td>
            <td>
                @item.Slug
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |

                <a class="confirmDeletion" asp-action="Delete" asp-route-id="@item.Id">Delete</a>


            </td>
        </tr>
    }
    </tbody>
</table>


@section Scripts {
    <script>
        $("table#categories tbody").sortable({
            items: "tr:not(.home)",
            placeholder: "ui-state-highlight",
            update: function () {
                let ids = $("table#categories tbody").sortable("serialize");
                let url = "/admin/categories/reorder";

                $.post(url, ids, function () { });
            }
        })
    </script>
}