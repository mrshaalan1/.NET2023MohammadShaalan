<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Admin Area</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/ShoppingCart.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/my-login.css" asp-append-version="true"/>

</head>
<body>
<header>
    
    <ul class="background">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>
    
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm background-primary shadow box-shadow mb-3">
        <div class="container-fluid">
            <span>
                <a class="navbar-brand text-white" asp-area="Admin" asp-controller="Home" asp-action="Index" target="_self">ShoppingCart</a>
            </span>

            <span class="float-end d-flex">
                <a class="navbar-brand text-white" asp-area="Admin" asp-controller="Home" asp-action="Index" target="_self">Admin Panel</a>
                <a class="navbar-brand text-white" asp-area="Admin" asp-controller="Products" asp-action="Index" target="_self">Products</a>
                <a class="navbar-brand text-white" asp-area="Admin" asp-controller="Categories" asp-action="Index" target="_self">Categories</a>
                <a class="navbar-brand text-white" asp-area="Admin" asp-controller="Users" asp-action="Index" target="_self">Users</a>
                <a class="navbar-brand text-white" asp-area="Admin" asp-controller="Roles" asp-action="Index" target="_self">Roles</a>
                <a class="btn btn-danger ms-2" asp-area="Admin" asp-controller="Account" asp-action="Logout">Log out</a>
            </span>

        </div>


        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">

            </ul>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        <div class="row">
            <div class="col">
                <partial name="_NotificationPartial"/>
                @RenderBody()
            </div>
        </div>
    </main>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>